<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/indiaFrag"
    tools:context=".Fragment.HomeFrag"
    android:background="@color/black"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="229dp"

        android:paddingTop="10dp"
        app:srcCompat="@drawable/india" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="match_parent"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="TotalCases"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:id="@+id/ttotalCase"
                android:padding="5dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:layout_marginRight="-1dp"
                android:fontFamily="@font/aldrich"
                android:text="00000"
                android:padding="5dp"
                android:textColor="@color/white"
                android:id="@+id/ccases"
                android:textSize="20sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="TotalDeaths"
                android:padding="5dp"
                android:textSize="20sp"
                android:id="@+id/ddeathCases"
                android:layout_below="@id/ttotalCase"
                android:textColor="@color/red"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ttotalCase"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:fontFamily="@font/aldrich"
                android:text="00000"

                android:id="@+id/ddeaths"
                android:textSize="20sp"
                android:textColor="@color/red"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abril_fatface"
                android:text="TotalRecovered"
                android:padding="5dp"
                android:textSize="20sp"
                android:id="@+id/ttotalrecov"
                android:layout_below="@id/ddeathCases"
                android:textColor="@color/Dgreen" ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/aldrich"
                android:id="@+id/rrecover"
                android:text="00000"
                android:textSize="20sp"
                android:layout_below="@id/ddeathCases"
                android:textColor="@color/Dgreen"
                ></TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"

        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="10dp"
      >
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/recyclerView"
    ></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</LinearLayout>




