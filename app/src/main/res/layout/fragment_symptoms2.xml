<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.SymptomsFrag"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="5dp"
        app:cardCornerRadius="20dp">

      <com.airbnb.lottie.LottieAnimationView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          app:lottie_autoPlay="true"
          app:lottie_loop="true"
          app:lottie_repeatMode="restart"
          app:lottie_fileName="first.json"></com.airbnb.lottie.LottieAnimationView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"></LinearLayout>
    </androidx.cardview.widget.CardView>

     <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SYMPTOMS"
            android:textSize="30dp"
            android:textAlignment="center"
            android:fontFamily="@font/abril_fatface"
            ></TextView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:elevation="5dp"
            app:cardCornerRadius="20dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="155dp"
                android:layout_height="80dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="fever.json"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"></com.airbnb.lottie.LottieAnimationView>

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="1. FEVER"
                android:fontFamily="@font/alfa_slab_one"
                android:layout_marginTop="24dp"
                android:textSize="23dp"></TextView>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_marginTop="80dp"
                android:layout_height="80dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="cough.json"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"></com.airbnb.lottie.LottieAnimationView>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_marginTop="160dp"
                android:layout_height="80dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="sleepy.json"
                app:lottie_loop="true"
                app:lottie_repeatMode="restart"></com.airbnb.lottie.LottieAnimationView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>